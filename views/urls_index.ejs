<!DOCTYPE html>
<html lang="en">
    <head>
        <title>TinyApp</title>
    </head>
    <body>
        <% include partials/_header.ejs %>
        <ul>
            <% for (let key in urls) { %>
                <li><%= key %> --> <a href="<%= urls[key].longURL %>"><%= urls[key].longURL %></a>
                    <a href="/urls/<%= key %>">Edit</a>
                    <form action="/urls/<%= key %>/delete" method="POST" style="display: inline;">
                        <button type="submit">Delete</button>
                    </form>
                </li>
            <% } %>
                <a href="/urls/new">Create a new short URL</a>
        </ul>
    </body>
</html>